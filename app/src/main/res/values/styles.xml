<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.DarkNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

        <!-- Overall app background -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- Dialog theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <!-- Menu and popup styles -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/Widget.App.PopupMenu</item>

        <item name="popupTheme">@style/ThemeOverlay.App.PopupMenu</item>

        <!-- Fix for all dialog types -->
        <item name="dialogTheme">@style/ThemeOverlay.App.Dialog</item>
        <item name="android:dialogTheme">@style/ThemeOverlay.App.Dialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.App.AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <!-- SearchView style -->
        <item name="searchViewStyle">@style/Widget.App.SearchView</item>
    </style>

    <!-- Material Alert Dialog Theme -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/note_background</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="android:background">@color/note_background</item>
        <item name="android:windowBackground">@color/note_background</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Standard Dialog Theme -->
    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorSurface">@color/note_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="ThemeOverlay.App.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorSurface">@color/note_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/note_background</item>
    </style>

    <!-- Dialog Title Text Style -->
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dialog Body Text Style -->
    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- Dialog Button Style -->
    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/note_background</item>
    </style>



    <!-- Popup Menu Theme -->
    <style name="ThemeOverlay.App.PopupMenu" parent="ThemeOverlay.MaterialComponents">
        <item name="colorSurface">@color/note_background</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/note_background</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/note_background</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
    </style>

    <!-- Shape Appearance for Bottom Sheet -->
    <style name="ShapeAppearance.App.BottomSheet" parent="">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Shape Appearance for Dialogs -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- SearchView Style -->
    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>
</resources>